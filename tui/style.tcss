/* ============================================================================ */
/* COLOR PALETTE (Tokyo Night Theme)                                           */
/* ============================================================================ */
/*
  Primary Background: #1a1b26
  Secondary Background: #24283b, #2a2e3f
  Border/Muted: #565f89, #414868
  Text Primary: #c0caf5
  Accent: #7aa2f7
  Disabled: #16161e
*/

/* ============================================================================ */
/* SCREEN & GLOBAL STYLES                                                      */
/* ============================================================================ */

Screen {
  align: center middle;
  background: #1a1b26;
  color: #c0caf5;
  padding: 1 2;
}

/* =========================================================================== */
/* HELP and QUIT SCREEN                                                        */
/* =========================================================================== */
HelpScreen {
  background: #1a1b26 70%;
  align: center middle;
}

QuitScreen {
  background: #1a1b26 70%;
  align: center middle;
}

#quit-dialog {
  grid-size: 2;
  grid-gutter: 1 2;
  grid-rows: 1fr 3;
  padding: 0 1;
  width: 40%;
  height: 16;
  border: ascii $background 80%;
  background: $surface;
}

#save-dialog {
  grid-size: 2;
  grid-gutter: 1 2;
  grid-rows: 1fr 3;
  padding: 0 1;
  width: 40%;
  height: 25;
  border: ascii $background 80%;
  background: $surface;
}

#help-dialog {
  overflow: auto;
  grid-size: 2;
  grid-gutter: 1 2;
  grid-rows: 1fr 3;
  padding: 0 1;
  width: 40%;
  height: auto;
  max-height: 50%;
  border: ascii $background 80%;
  background: $surface;
}

.help-label{
  column-span: 1;
  height: 8;
  width: 1fr;
  padding: 0 1;
  content-align: center middle;
  text-style: bold;
  color: #7aa2f7;
  content-align: center middle;
}

.quit-label{
  column-span: 1;
  height: 9;
  width: 1fr;
  padding: 0 1;
  content-align: center middle;
  text-style: bold;
  color: #7aa2f7;
  content-align: center middle;
}

.save-label{
  column-span: 1;
  height: 9;
  width: 1fr;
  padding: 0 1;
  content-align: center middle;
  text-style: bold;
  color: #7aa2f7;
  content-align: center middle;
}

.quit-button-row {
  padding-right: 1;
  padding-left: 1;
  align-horizontal: center;
}

.quit-button-row:last-child {
  padding-right: 0;
}

.quit-button-row Button {
  width: 50%;
  margin-right: 1;
}

.quit-button-row Button:last-child {
  margin-right: 0;
  margin-left: 1;
  background: #f7768e
}

.main-label {
  column-span: 1;
  height: 2;
  width: 1fr;
  content-align: center middle;
  text-style: bold;
  color: #7aa2f7;
  content-align: center middle;
}

.end-page-button-row {
  padding-right: 1;
  padding-left: 1;
  margin: 0 2;
  align-vertical: bottom;
  align-horizontal: center;
}

.end-page-button-row Button{
  width: 66%;
}


.task-list-container {
  overflow: auto;
  height: 1fr;
  width: 100%;
}

.task-list-container > Horizontal{
  width: 100%;
  height: auto;
  max-height: 5;
  align-horizontal: left;
  align-vertical: top;
  }
/* ============================================================================ */
/* LAYOUT COMPONENTS                                                            */
/* ============================================================================ */

Header,
Footer {
  background: #414868;
  color: #c0caf5;
}

/* ============================================================================ */
/* FORM CONTROLS                                                                */
/* ============================================================================ */

/* ----- Buttons ----- */
Button {
  padding: 1 3;
  width: auto;
  border: ascii #565f89;
  background: #7aa2f7;
  color: #1a1b26;
}

Button:disabled {
  background: #24283b;
  color: #565f89;
  border: ascii #414868;
}

/* ----- Select Dropdowns ----- */
Select {
  background: #2a2e3f;
  color: #c0caf5;
  border: ascii #565f89;
  padding: 0 1;
  margin: 0 1;
}

Select:disabled {
  color: #565f89;
  background: #24283b;
}

Select:focus {
  border: ascii #7aa2f7;
}

Input {
  height: 4;
  background: #2a2e3f;
  color: #c0caf5;
  border: ascii #565f89;
  padding: 0 1;
  margin: 0 1;
}

Input:focus {
  border: ascii #7aa2f7;
}

/* ----- Switches ----- */
Switch {
  padding: 1 3;
  width: 15;
  min-width: 15;
  margin: 0 1;
  border: ascii #565f89;
  background: #1a1b26;
  color: #c0caf5;
}


Switch:disabled {
  background: #16161e;
  color: #414868;
  border: ascii #414868;
}

Switch:focus {
  border: ascii #7aa2f7;
  background: #24283b;
  color: #c0caf5;
}

/* ----- Checkboxes ----- */
Checkbox {
  overflow: auto;
  width: 100%;
  height: auto;
  max-height: 80%;
  background: #2a2e3f;
  color: #c0caf5;
  border: ascii #565f89;
  padding: 0 1;
  margin-right: 1;
}

Checkbox:focus {
  border: ascii #7aa2f7;
}

TabbedContent {
  border: ascii #565f89;
  height: auto;
  max-height: 80%;
}

TabbedContent:focus {
  border: ascii #7aa2f7;
}

SelectionList {
  border: ascii #565f89;
  height: 1fr;
}

SelectionList:focus {
  border: ascii #7aa2f7;
}

/* ============================================================================ */
/* TEXT & LABELS                                                               */
/* ============================================================================ */

.field-label {
  width: auto;
  text-style: bold;
  color: #7aa2f7;
  margin-right: 1;
}

.field-label-small {
  width: 20%;
  min-width: 25;
  text-style: bold;
  color: #7aa2f7;
  margin-right: 1;
}


.field-label-center {
  width: 1fr;
  min-width: 20;
  text-style: bold;
  color: #7aa2f7;
  margin-right: 1;
}

.row-tight {
  layout: horizontal;
  height: 1;
  align-horizontal: left;
  align-vertical: middle;
}
/* ============================================================================ */
/* LAYOUT CLASSES                                                              */
/* ============================================================================ */

/* ----- General Rows ----- */
.row {
  layout: horizontal;
  padding: 1 0;
  height: auto;
  max-height: 8;
  align-horizontal: left;
  align-vertical: middle;
}

/* ----- Button Rows ----- */
.button-row {
  padding: 1 1;
  align-horizontal: center;
  align-vertical: bottom;
}

.button-row:last-child {
  padding-right: 0;
}

.button-row Button {
  width: 50%;
  margin-right: 1;
}

.button-row Button:last-child {
  margin-right: 0;
  margin-left: 1;
}


/* ----- Switch Layouts ----- */
.tight-switches {
  padding: 1 0;
  height: auto;
  max-height: 8;
  width: 100%;
}

.tight-switches > Vertical {
  width: auto;
  margin-right: 2;
}

.tight-switches > Vertical:last-child {
  width: 1fr;
  margin-right: 0;
}

.switch-col {
  width: auto;
  margin-left: 2;
  margin-right: 2;
}


.collectives-container {
  overflow: auto;
  width: 100%;
  height: 40%;
}

.first-big{
  width: 80%;
  margin-right: 2;
}


.lib-list-container {
  overflow: auto;
  height: 40%;
  width: 100%;
}

.task-list-container > Horizontal{
  width: 100%;
  height: auto;
  max-height: 5;
  align-horizontal: left;
  align-vertical: top;
  }

.algo-columns {
    layout: horizontal;
    padding: 1 2;
    overflow: auto;
    max-height: 80%;
}

.algo-column {
    layout: vertical;
    padding: 0 1;
    height: auto;
    max-height: 80%;
    width: 1fr;             /* Equally distribute columns */
}
/* ============================================================================ */
/* FIELD LAYOUTS                                                                */
/* ============================================================================ */

.field {
  width: 1fr;
  min-width: 20;        /* Never shrink below 20 chars wide */
  margin-right: 2;      /* Gap to the next column */
}

.field:last-child {
  margin-right: 0;      /* Remove right margin on last field */
}

.field-small {
  width: 20%;
  min-width: 25;
  margin-right: 2;
}


.row-task {
  layout: horizontal;
  padding: 0 0;
  height: auto;
  max-height: 5;
  align-horizontal: left;
  align-vertical: middle;
}

.button-row-task {
  width: 25%;
  padding-right: 1;
  padding-left: 1;
  align-horizontal: center;
}

.button-row-task:last-child {
  padding-right: 0;
}

.button-row-task Button {
  width: 50%;
  margin-right: 1;
}

.button-row-task Button:last-child {
  margin-right: 0;
  margin-left: 1;
}

.button-row-task-static {
  align-horizontal: left;
  width: 25%;
}

.button-row-task-static Static{
  width: 50%;
}


.switch-and-button-end {
  width: 50%;
  padding-right: 1;
  padding-left: 1;
}

.switch-and-button-end:last-child {
  padding-right: 0;
}

.switch-and-button-end Switch{
  align-horizontal: center;
  width: 20%;
  margin-right: 1;
}

.switch-and-button-end Button {
  align-horizontal: center;
  width: 40%;
  margin-right: 1;
}

.switch-and-button-end Button:last-child {
  margin-right: 0;
  margin-left: 1;
}

.switch-and-button-end Static{
  width: 40%;
}
.switch-and-button-end Static:first-child{
  width: 20%;
}
/* ============================================================================ */
/* SUMMARY & CONTENT CONTAINERS                                                 */
/* ============================================================================ */

.summary-container {
  overflow: auto;
  width: 1fr;
}

.summary-box {
  border: ascii white;
  margin: 0 1 0 1;
  background: $surface;
}

.full{
  height: 80%;
}
